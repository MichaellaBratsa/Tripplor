<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center_horizontal"
    android:background="#FAE6CF">

    <!-- Title -->
    <TextView
        android:id="@+id/textForgotTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RESET PASSWORD"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="#123840"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="30dp"/>

    <!-- Email / Phone input -->
    <EditText
        android:id="@+id/input_identifier"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@drawable/rounded_field"
        android:hint="Email or Phone"
        android:padding="12dp"
        android:textColor="#123840"
        android:textColorHint="#777777"
        android:layout_marginBottom="25dp" />

    <!-- RESET PASSWORD Button -->
    <Button
        android:id="@+id/button_next_step"
        android:layout_width="250dp"
        android:layout_height="55dp"
        android:text="RESET PASSWORD"
        android:textColor="#FFFFFF"
        app:backgroundTint="#1B4658"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:background="@drawable/signin_button"
        android:backgroundTint="@null"
        android:layout_marginBottom="20dp"/>
</LinearLayout>
