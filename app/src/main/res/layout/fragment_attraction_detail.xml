<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FAE6CF"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Image -->
        <ImageView
            android:id="@+id/imageDetail"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:scaleType="centerCrop"
            android:background="#CCCCCC"
            android:contentDescription="@string/app_name"
            android:layout_marginBottom="10dp"/>

        <!-- Reviews icon (top-right) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:paddingEnd="4dp">

            <ImageView
                android:id="@+id/iconReviews"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:src="@drawable/ic_reviews"
                android:contentDescription="@string/reviews"
                app:tint="#1B4658" />
        </LinearLayout>

        <!-- Name -->
        <TextView
            android:id="@+id/textNameDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="#123840"/>

        <!-- Location / Format -->
        <TextView
            android:id="@+id/textFormattedDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            android:textSize="18sp"
            android:textColor="#555555"/>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="12dp"
            android:background="#CCCCCC" />

        <!-- Description -->
        <TextView
            android:id="@+id/textDescriptionDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:textSize="17sp"
            android:textColor="#123840" />

        <!-- Website -->
        <TextView
            android:id="@+id/textWebsiteDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:textSize="17sp"
            android:textColor="#1B58E3"
            android:autoLink="web" />

        <!-- Opening -->
        <TextView
            android:id="@+id/textOpeningDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:textSize="17sp"
            android:textColor="#123840" />

        <!-- Categories -->
        <TextView
            android:id="@+id/textCategoriesDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:textSize="17sp"
            android:textColor="#123840" />

        <!-- Email -->
        <TextView
            android:id="@+id/textEmailDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:textSize="17sp"
            android:textColor="#123840" />

        <!-- Phone -->
        <TextView
            android:id="@+id/textPhoneDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:textSize="17sp"
            android:textColor="#123840" />

        <!-- Schedule Title -->
        <TextView
            android:id="@+id/schedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:text="@string/add_to_schedule_for"
            android:textColor="#123840"
            android:textSize="19sp"/>

        <!-- Time Row -->
        <LinearLayout
            android:id="@+id/timeRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/textTimeDetail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Time: not set"
                android:textSize="18sp"
                android:textColor="#123840" />

            <Button
                android:id="@+id/buttonPickTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pick time"
                android:background="@drawable/signin_button"
                android:textColor="#FFFFFF"
                app:backgroundTint="#1B4658"
                android:textStyle="bold"
                android:paddingLeft="20dp"
                android:paddingRight="20dp" />
        </LinearLayout>

        <!-- Today / Tomorrow Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/buttonAddToday"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="@string/today"
                android:background="@drawable/signin_button"
                android:textColor="#FFFFFF"
                app:backgroundTint="#1B4658"
                android:textStyle="bold"/>

            <View
                android:layout_width="12dp"
                android:layout_height="0dp" />

            <Button
                android:id="@+id/buttonAddTomorrow"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="@string/tomorrow"
                android:background="@drawable/signin_button"
                android:textColor="#FFFFFF"
                app:backgroundTint="#1B4658"
                android:textStyle="bold"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
