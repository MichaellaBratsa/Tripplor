<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="20dp"
    app:cardUseCompatPadding="true"
    app:cardElevation="6dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Background image -->
        <ImageView
            android:id="@+id/imageAttraction"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

        <!-- Softer overlay -->
        <View
            android:id="@+id/imageOverlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#40FFFFFF" />

        <!-- Category chip (top-right) -->
        <TextView
            android:id="@+id/textCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:paddingStart="14dp"
            android:paddingEnd="14dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:text="@string/category"
            android:textSize="14sp"
            android:textColor="#123840"
            android:background="@drawable/bg_attraction_category_chip"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_gravity="top|end" />

        <!-- Gradient bottom title overlay -->
        <View
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="bottom"
            android:background="@drawable/bg_attraction_bottom_gradient" />

        <!-- Title -->
        <TextView
            android:id="@+id/textName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:padding="16dp"
            android:text="@string/attraction_name"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:maxLines="1"
            android:ellipsize="end" />

    </FrameLayout>

</androidx.cardview.widget.CardView>
