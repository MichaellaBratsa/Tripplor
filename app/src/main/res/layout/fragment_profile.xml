<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3E2C9">

    <!-- Scrollable Content -->
    <ScrollView
        android:id="@+id/scrollArea"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomNav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp">

            <!-- Profile Icon -->
            <FrameLayout
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/profile_circle">

                <ImageView
                    android:id="@+id/profile_icon"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:src="@drawable/profile_2"
                    app:tint="#123840"/>
            </FrameLayout>

            <!-- Username -->
            <TextView
                android:id="@+id/text_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text=""
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#123840"
                android:gravity="center" />

            <!-- Email -->
            <TextView
                android:id="@+id/text_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text=""
                android:textSize="15sp"
                android:textColor="#555555"
                android:gravity="center" />

            <!-- Profile Info Button -->
            <Button
                android:id="@+id/button_profileInfo"
                android:layout_width="260dp"
                android:layout_height="55dp"
                android:text="Profile Info"
                android:textColor="#FFFFFF"
                app:backgroundTint="#1B4658"
                android:textStyle="bold"
                android:background="@drawable/rounded_field"
                android:backgroundTint="@null"
                android:layout_marginTop="30dp" />

            <!-- About Button -->
            <Button
                android:id="@+id/button_about"
                android:layout_width="260dp"
                android:layout_height="55dp"
                android:text="About / Help"
                android:textColor="#FFFFFF"
                app:backgroundTint="#1B4658"
                android:textStyle="bold"
                android:background="@drawable/rounded_field"
                android:backgroundTint="@null"
                android:layout_marginTop="20dp" />

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginTop="100dp"
                android:layout_marginBottom="40dp">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/ic_logout"
                    app:tint="#DC1010"
                    android:layout_marginRight="10dp" />

                <TextView
                    android:id="@+id/textLogOut"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Log Out"
                    android:textColor="#DC1010"
                    android:textStyle="bold"
                    android:textSize="18sp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#F3E2C9"
        android:padding="8dp"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Home -->
        <LinearLayout
            android:id="@+id/buttonHome"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_home"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textSize="12sp"
                android:textColor="#1B4658"
                android:paddingTop="4dp"/>
        </LinearLayout>

        <!-- Plans -->
        <LinearLayout
            android:id="@+id/buttonPlans"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_plan"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Plans"
                android:textSize="12sp"
                android:textColor="#1B4658"
                android:paddingTop="4dp"/>
        </LinearLayout>

        <!-- Map -->
        <LinearLayout
            android:id="@+id/buttonMap"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_map"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Map"
                android:textSize="12sp"
                android:textColor="#1B4658"
                android:paddingTop="4dp"/>
        </LinearLayout>

        <!-- Explore -->
        <LinearLayout
            android:id="@+id/buttonTest"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_search"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Explore"
                android:textSize="12sp"
                android:textColor="#1B4658"
                android:paddingTop="4dp"/>
        </LinearLayout>

        <!-- Profile -->
        <LinearLayout
            android:id="@+id/buttonProfile"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/baseline_person_24"
                app:tint="#1664bd"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:textSize="12sp"
                android:textColor="#1B4658"
                android:paddingTop="4dp"/>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
