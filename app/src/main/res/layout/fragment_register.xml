<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FAE6CF"
    android:fillViewport="true"
    tools:context=".ui.register.RegisterFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="24dp">

        <!-- Title -->
        <TextView
            android:id="@+id/textRegisterTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CREATE ACCOUNT"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#123840"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="30dp" />

        <!-- Full Name Label -->
        <TextView
            android:text="Full Name"
            android:textColor="#123840"
            android:textSize="15sp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp" />

        <!-- Full Name Input -->
        <EditText
            android:id="@+id/addFullName"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:hint="Full Name"
            android:background="@drawable/rounded_field"
            android:textColor="#123840"
            android:textColorHint="#777777"
            android:padding="12dp"
            android:layout_marginBottom="16dp"/>

        <!-- Email Label -->
        <TextView
            android:text="Email"
            android:textColor="#123840"
            android:textSize="15sp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp" />

        <!-- Email Input -->
        <EditText
            android:id="@+id/addEmail"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:hint="example@email.com"
            android:inputType="textEmailAddress"
            android:background="@drawable/rounded_field"
            android:textColor="#123840"
            android:textColorHint="#777777"
            android:padding="12dp"
            android:layout_marginBottom="16dp"/>

        <!-- Phone Label -->
        <TextView
            android:text="Phone Number"
            android:textColor="#123840"
            android:textSize="15sp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp" />

        <!-- Phone Input -->
        <EditText
            android:id="@+id/addPhone"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:hint="eg. (123) 456-7890"
            android:inputType="phone"
            android:background="@drawable/rounded_field"
            android:textColor="#123840"
            android:textColorHint="#777777"
            android:padding="12dp"
            android:layout_marginBottom="16dp"/>

        <!-- Username Label -->
        <TextView
            android:text="Username"
            android:textColor="#123840"
            android:textSize="15sp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp" />

        <!-- Username Input -->
        <EditText
            android:id="@+id/addUsername"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:hint="Username"
            android:background="@drawable/rounded_field"
            android:textColor="#123840"
            android:textColorHint="#777777"
            android:padding="12dp"
            android:layout_marginBottom="16dp"/>

        <!-- Password Label -->
        <TextView
            android:text="Password"
            android:textColor="#123840"
            android:textSize="15sp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp" />

        <!-- Password Input -->
        <EditText
            android:id="@+id/addPassword"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:hint="••••••••"
            android:inputType="textPassword"
            android:background="@drawable/rounded_field"
            android:textColor="#123840"
            android:textColorHint="#777777"
            android:padding="12dp"
            android:layout_marginBottom="16dp"/>

        <!-- Confirm Password Label -->
        <TextView
            android:text="Confirm Password"
            android:textColor="#123840"
            android:textSize="15sp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp" />

        <!-- Confirm Password Input -->
        <EditText
            android:id="@+id/addConfirmPassword"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:hint="••••••••"
            android:inputType="textPassword"
            android:background="@drawable/rounded_field"
            android:textColor="#123840"
            android:textColorHint="#777777"
            android:padding="12dp"
            android:layout_marginBottom="30dp"/>

        <!-- Register Button -->
        <Button
            android:id="@+id/buttonSave"
            android:layout_width="250dp"
            android:layout_height="55dp"
            android:text="REGISTER"
            android:textColor="#FFFFFF"
            app:backgroundTint="#1B4658"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:background="@drawable/signin_button"
            android:backgroundTint="@null"
            android:layout_marginBottom="20dp"/>

    </LinearLayout>

</ScrollView>
