<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="#FAE6CF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="14dp"
        android:background="@drawable/bg_review_card"
        android:orientation="vertical">

        <!-- Top row: Username + Stars -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Username -->
            <TextView
                android:id="@+id/textUserName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textColor="#123840"
                android:textSize="16sp"
                android:text="Antonis B." />

            <!-- Stars -->
            <TextView
                android:id="@+id/textStars"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="★★★★★"
                android:textColor="#FFD700"
                android:textSize="15sp"
                android:letterSpacing="0.05" />
        </LinearLayout>

        <!-- Comment -->
        <TextView
            android:id="@+id/textComment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:text="Sample comment..."
            android:textColor="#123840"
            android:textSize="15sp" />

        <!-- Date -->
        <TextView
            android:id="@+id/textDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:paddingTop="10dp"
            android:text="08/10/2025"
            android:textColor="#666666"
            android:textSize="13sp" />

    </LinearLayout>
</LinearLayout>
